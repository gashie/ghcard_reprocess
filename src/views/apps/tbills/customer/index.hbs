<div class="row">
    <!-- Zero config table start -->
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h5>Upload Excel File</h5>
                <form role="form" method="post" action="/apps/upload/" enctype="multipart/form-data">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="demo-input-file" class="col-form-label">File</label>
                            <input class="form-control" type="file" id="demo-input-file" name="uploaded_file">
                            <small style="color: red;">Try selecting only excel files.</small>
                        </div>
                    </div>
                    <div class="col-md-6 text-right">

                        <button type="submit" id="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>

            </div>
            <div class="card-body">
                <div class="dt-responsive table-responsive">
                    <table id="simpletable" class="table table-striped table-bordered nowrap">
                        <thead>
                            <tr>
                                <th>ChannelReference</th>
                                <th>PhoneNumber</th>
                                <th>Amount</th>
                                <th>CardType</th>
                                <th>Customer</th>
                                <th>Quantity</th>
                                <th>PaymentMode</th>
                                <th>Reason</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each Data}}
                            <tr>
                                <td>{{Details.ChannelReference}}</td>
                                <td>{{Details.PhoneNumber}}</td>
                                <td>{{Details.Amount}}</td>
                                <td>{{Details.CardType}}</td>
                                <td>{{Details.CustomerName}}</td>
                                <td>{{Details.Quantity}}</td>
                                <td>{{Details.PaymentMode}}</td>
                                <td>{{Message}}</td>

                            </tr>
                            {{/each}}
                        </tbody>
                       
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>